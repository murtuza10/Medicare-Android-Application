<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".RegionOne">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Dentist"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Dietitian/Nutrition"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button11"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Orthopaedic"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Pediatrician"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Gastroenterologist"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Ayurveda"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button15"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Dermatologist"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Diabetologist"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Multispeciality Hospital"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right|top"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Cardiologist"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="General Physician"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Ophthalmology"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="General Surgeon"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Gynaecologist/Obstetrician"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_margin="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Physiotherapy"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#66F9B0"
                    android:text="Endocrinologist"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/design_default_color_primary" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>